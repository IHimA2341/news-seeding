{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of the article with the article_id",
    "exampleResponse": {
      "article": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 2,
          "body": "Lorum ipsum donor amet",
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_image_url": "https://oxzuihixzcuvzxjvn.com"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for an article related to the article_id",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 2,
          "article_id": 2,
          "body": "Lorum ipsum donor amet",
          "votes": 2,
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z"
        }
      ]
    }
  }
}
